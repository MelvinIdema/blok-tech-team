
    <title>Pupplefinder</title>
    <%- include('includes/head'); -%>

    <%- include('includes/header'); -%>
    <div class="cards">
        <img src="/images/<%= pupple.imgUrl %>" alt="Puppy">
        <div class="container">
            <h1><%= pupple.name %></h1>
            <p><i class="fa fa-map-marker fa-lg"></i><%= pupple.city %></p>

            <ul>
                <li><%= pupple.age %> jaar</li>
                <li><%= pupple.personality %></li>
                <li><%= pupple.walkDuration %> min</li>
            </ul>
        </div>
    </div>

    <div class="buttons">
        <a href="/pupple" class="decline">X</a>

        <a href="/pupple/info/<%= pupple._id %>" class="next">Maak afspraak</a>

    </div>
    
    
    <%- include('includes/footer'); -%>
